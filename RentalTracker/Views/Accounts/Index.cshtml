    <div class="row details-panel-body">
        <div class="col-sm-4">
            <table class="table table-hover">
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                <div class="card-item card-item-account">
                                    <div class="card-item-body">
                                        <p class="h4">@Html.DisplayFor(modelItem => item.Name)</p>
                                        <p class="text-right">&pound; @Html.DisplayFor(modelItem => item.OpeningBalance)</p>
                                    </div>
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>

    <div class="row details-panel-footer">
        <div class="col-sm-4">
            <div class="btn-group-lg text-center">
                <button class="btn btn-primary" type="submit">Add Account</button>
                <button class="btn btn-primary" type="submit">Edit Account</button>
            </div>
        </div>

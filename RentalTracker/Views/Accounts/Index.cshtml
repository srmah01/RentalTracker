@model IEnumerable<RentalTracker.Domain.Account>

@{
    ViewBag.Title = "Accounts";
}

<div class="jumbotron">
    <div>
        <a href="~/Home/Index">
            <p class="h1 col-sm-1"><i class="glyphicon glyphicon-circle-arrow-left"></i></p>
        </a>
        <p class="h1">@ViewBag.Title</p>
    </div>
</div>

<div class="container details-panel">

    <div class="row details-panel-header">

        <div class="col-md-4">
            <div class="card-items-panel-header">
                <div class="btn-group-lg text-center" data-toggle="buttons">
                    <label class="btn btn-primary active">
                        <input type="radio" name="AccountsOptions" id="AllAccounts" autocomplete="off" checked> All Accounts
                    </label>
                    <label class="btn btn-primary">
                        <input type="radio" name="AccountsOptions" id="ActiveAccounts" autocomplete="off"> Active Accounts
                    </label>
                </div>
            </div>
        </div>

        <div class="col-md-8 transaction-panel">
            <table class="transaction-panel-table transaction-panel-table-head">
                <tr>
                    <td width="12%">
                        <button class="btn">
                            <span class="">Date</span>&nbsp;
                            <span class="caret" style="background-color: white"></span>
                        </button>
                    </td>
                    <td width="25%">
                        <p>Payee</p>
                        <p>Category</p>
                    </td>
                    <td width="10%">
                        <p>Income</p>
                    </td>
                    <td width="10%">
                        <p>Expense</p>
                    </td>
                    <td width="3%">
                        <p>
                            <i class="glyphicon glyphicon-check h5"></i>
                        </p>
                    </td>
                    <td width="40%">
                        <p>Reference</p>
                        <p>Memo</p>
                    </td>
                </tr>
            </table>
            <table class="transaction-panel-table transaction-panel-table-body">
                <tr>
                    <td width="37%">
                        <select class="" style="padding: 0px 2px;">
                            <option>All Dates</option>
                            <option>Last 120 Days: 15th September - 12 January 2017</option>
                        </select>
                    </td>
                    <td width="10%">
                        <p>12345.00</p>
                    </td>
                    <td width="10%">
                        <p>12345.00</p>
                    </td>
                    <td width="3%">
                        <p></p>
                    </td>
                    <td width="40%">
                        <p></p>
                    </td>
                </tr>
            </table>

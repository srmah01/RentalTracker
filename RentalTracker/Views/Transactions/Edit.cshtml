@model Transaction
@{
    ViewBag.Title = "Transactions";
}

@Html.Partial("_JumboHeader")

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.Id)

        @Html.Partial("_Transaction", Model)
        
        <div class="form-group">
            <div class="col-md-offset-2 col-md-4">
                <button type="submit" value="Save" class="btn btn-default">
                    <span><i class="glyphicon glyphicon-save"></i>&nbsp;Save</span>
                </button>
            </div>
        </div>
    </div>
}

<div>
    <a class="btn btn-default" href="@Url.Action("Index")"><i class="glyphicon glyphicon-arrow-left"></i>&nbsp;Back to List</a>
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
    @Scripts.Render("~/bundles/datetimepicker")
    @Scripts.Render("~/bundles/transaction-input")
}

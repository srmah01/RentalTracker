@model EntityDetailsViewModel<Transaction>

@{
    ViewBag.Title = "Transactions";
}

@Html.Partial("_JumboHeader")

<div class="container">
    @Html.Partial("_TransactionsList", Model.Transactions)
</div>

<div class="center-block">
    <a class="btn btn-default" href="@Url.Action(  "Create" )"><i class="glyphicon glyphicon-plus-sign"></i>&nbsp;Add</a>
    <a id="edit" class="btn btn-default disabled" href="@Url.Action( "Edit" )"><i class="glyphicon glyphicon-pencil"></i>&nbsp;Edit</a>
    <a id="details" class="btn btn-default disabled hidden" href="@Url.Action( "Details" )"><i class="glyphicon glyphicon-list"></i>&nbsp;Details</a>
    <a id="delete" class="btn btn-default disabled" href="@Url.Action( "Delete" )"><i class="glyphicon glyphicon-remove"></i>&nbsp;Delete</a>
</div>


@section Scripts {
    <script src="~/Scripts/items-table.js"></script>
}

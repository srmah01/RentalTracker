@model TaxReportViewModel
@{
    ViewBag.Title = "Tax Report";
}

@Html.Partial("_JumboHeader")

<div class="container">
    <h4>This is a summary report for the financial year ending <b>5th April @Model.Year</b>.</h4>
    <br />
    <div class="form-group">
        @Html.LabelFor(model => model.AccountId, htmlAttributes: new { @class = "control-label col-md-4" })
        <div class="col-md-8">
            <p class="form-control-static">@Html.DisplayFor(model => model.AccountName)</p>
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.Year, htmlAttributes: new { @class = "control-label col-md-4" })
        <div class="col-md-8">
            <p class="form-control-static">@Html.DisplayFor(model => model.Year)</p>
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.TotalIncome, htmlAttributes: new { @class = "control-label col-md-4" })
        <div class="col-md-8">
            <p class="form-control-static">@Html.DisplayFor(model => model.TotalIncome)</p>
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.TotalExpense, htmlAttributes: new { @class = "control-label col-md-4" })
        <div class="col-md-8">
            <p class="form-control-static">@Html.DisplayFor(model => model.TotalExpense)</p>
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.Profit, htmlAttributes: new { @class = "control-label col-md-4" })
        <div class="col-md-8">
            <p class="form-control-static">@Html.DisplayFor(model => model.Profit)</p>
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.TaxLiability, htmlAttributes: new { @class = "control-label col-md-4 h4" })
        <div class="col-md-8">
            <p class="form-control-static h4">@Html.DisplayFor(model => model.TaxLiability)</p>
        </div>
    </div>


    <div class="col-md-8">
        <hr />
        <h3>Income</h3>

        @Html.Partial("_ReportTransactionsList", Model.Income, new ViewDataDictionary
            {
                { "Total", Model.TotalIncome }
            })
    </div>

    <div class="col-md-8">
        <hr />
        <h3>Expenses</h3>

        @Html.Partial("_ReportTransactionsList", Model.Expenses, new ViewDataDictionary()
            {
                {  "Total", Model.TotalExpense }
            })
    </div>

</div>

<div>
    <a class="btn btn-default" href="@Url.Action("Generate")"><i class="glyphicon glyphicon-arrow-left"></i>&nbsp;Back to Generate Report</a>
</div>

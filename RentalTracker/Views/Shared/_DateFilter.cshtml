@model DateFilterViewModel

<div class="panel-group" id="accordion" role="tablist" aria-multiselectable="true">
    <div class="panel panel-default">
        <div class="panel-heading" role="tab" id="headingDateFilter">
            <h4 class="panel-title">
                <a class="accordion-toggle" role="button" data-toggle="collapse" data-parent="#accordion" href="#collapseDateFilter" aria-expanded="true" aria-controls="collapseOne">
                    Date Filter
                </a>
            </h4>
        </div>
        <div id="collapseDateFilter" class="panel-collapse collapse in" role="tabpanel" aria-labelledby="headingDateFilter">
            <div class="panel-body">
                <form method="get" class="form-horizontal">
                    <div class="form-group">
                        <div>
                            @Html.LabelFor(model => model.DateFilter, htmlAttributes: new { @class = "control-label col-md-1" })
                            <div class="col-md-3">
                                @Html.EnumDropDownListFor(model => model.DateFilter, htmlAttributes: new { @class = "form-control" })
                            </div>
                        </div>

                        <div id="CustomDateDates" class="@(@Model.DateFilter != RentalTracker.Enums.DateFilterSelector.CustomDate ? "hidden" : "")">
                            <div>
                                @Html.LabelFor(model => model.FromDate, htmlAttributes: new { @class = "control-label col-md-1" })
                                <div class="col-md-3">
                                    <div id='filter-to-datepicker' class="input-group datepicker date">
                                        <span class="input-group-addon">
                                            <span class="glyphicon glyphicon-calendar"></span>
                                        </span>
                                        @Html.EditorFor(model => model.FromDate, new { htmlAttributes = new { @class = "form-control" } })
                                    </div>
                                    @Html.ValidationMessageFor(model => model.FromDate, "", new { @class = "text-danger" })
                                </div>
                            </div>

                            <div>
                                @Html.LabelFor(model => model.ToDate, htmlAttributes: new { @class = "control-label col-md-1" })
                                <div class="col-md-3">
                                    <div id='filter-from-datepicker' class="input-group datepicker date">
                                        <span class="input-group-addon">
                                            <span class="glyphicon glyphicon-calendar"></span>
                                        </span>
                                        @Html.EditorFor(model => model.ToDate, new { htmlAttributes = new { @class = "form-control" } })
                                    </div>
                                    @Html.ValidationMessageFor(model => model.ToDate, "", new { @class = "text-danger" })
                                </div>
                            </div>
                        </div>

                    </div>

                    <div class="form-group">
                        <div class="col-md-2 col-md-push-1">
                            <button class="btn btn-default" type="submit"><i class="glyphicon glyphicon-filter"></i>Filter</button>
                        </div>
                    </div>

                </form>
            </div>
        </div>
    </div>
</div>
